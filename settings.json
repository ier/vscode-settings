{
  "calva.highlight.enableBracketColors": false,
  "calva.highlight.highlightActiveIndent": false,
  "calva.paredit.defaultKeyMap": "strict",
  "calva.prettyPrintingOptions": {
    "enabled": true,
    "printEngine": "pprint",
    "width": 120,
    "maxLength": 50
  },
  "calva.referencesCodeLens.enabled": true,
  "calva.showDocstringInParameterHelp": true,

  "diffEditor.ignoreTrimWhitespace": false,

  "editor.largeFileOptimizations": true,
  "editor.minimap.enabled": false,
  "editor.renderControlCharacters": false,
  "editor.renderWhitespace": "all",
  "editor.rulers": [80],

  "git.autofetch": true,
  "[git-commit]": { "editor.rulers": [72] },

  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/.clj-kondo": true
  },
  
  "telemetry.telemetryLevel": "off",

  "terminal.integrated.fontFamily": "MesloLGS NF",
  "terminal.integrated.fontSize": 14,

  "window.titleBarStyle": "custom",
  "window.zoomLevel": 0,

  "workbench.colorTheme": "Sadhu",
  "workbench.preferredDarkColorTheme": "Sadhu",
  "workbench.preferredLightColorTheme": "Sadhu",
  "workbench.startupEditor": "newUntitledFile",
  
  "[clojure]": {
    "editor.autoClosingBrackets": "always",
    "editor.autoClosingOvertype": "always",
    "editor.formatOnPaste": true
  },
  
  "editor.tokenColorCustomizations": {
    "functions": { "fontStyle": "bold", "foreground": "#25437afa" },
    "keywords": { "fontStyle": "bold", "foreground": "#000"},
    "strings": { "foreground": "#3a3a3a" }
  }
}
