{
  "breadcrumbs.enabled": false,

  "calva.highlight.enableBracketColors": false,
  "calva.highlight.highlightActiveIndent": false,
  "calva.paredit.defaultKeyMap": "strict",
  "calva.prettyPrintingOptions": {
    "enabled": true,
    "printEngine": "pprint",
    "width": 120,
    "maxLength": 50
  },
  "calva.referencesCodeLens.enabled": true,
  "calva.showDocstringInParameterHelp": true,
  "calva.showCalvaSaysOnStart": false,

  "diffEditor.ignoreTrimWhitespace": false,

  "editor.largeFileOptimizations": true,
  "editor.minimap.enabled": false,
  "editor.renderControlCharacters": false,
  "editor.renderWhitespace": "all",
  "editor.rulers": [80],
  "editor.unicodeHighlight.ambiguousCharacters": false,

  "git.autofetch": true,
  "[git-commit]": { "editor.rulers": [72] },
  "gitlens.hovers.avatars": false,

  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/.clj-kondo": true
  },

  "telemetry.telemetryLevel": "off",

  "terminal.integrated.fontFamily": "MesloLGS NF",
  "terminal.integrated.fontSize": 14,

  "window.titleBarStyle": "custom",
  "window.zoomLevel": 0,

  "workbench.colorTheme": "Albedo",
  "workbench.iconTheme": "vs-minimal",
  "workbench.preferredDarkColorTheme": "Albedo",
  "workbench.preferredLightColorTheme": "Albedo",
  "workbench.startupEditor": "newUntitledFile",

  "[clojure]": {
    "editor.autoClosingBrackets": "always",
    "editor.autoClosingOvertype": "always",
    "editor.formatOnPaste": true
  }
}
